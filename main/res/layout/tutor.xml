<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rainbow" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="915px"
        android:layout_height="919px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tw"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageButton
            android:id="@+id/menu1"
            android:layout_width="301px"
            android:layout_height="303px"
            android:layout_below="@+id/play1"
            android:layout_marginRight="-180px"
            android:layout_marginTop="90px"
            android:layout_toLeftOf="@+id/view1"
            android:background="@drawable/menu" />
        <ImageButton
            android:id="@+id/menu2"
            android:layout_width="301px"
            android:layout_height="303px"
            android:layout_below="@+id/play1"
            android:layout_marginRight="-180px"
            android:layout_marginTop="90px"
            android:layout_toLeftOf="@+id/view1"
            android:background="@drawable/dmenu" 
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/about1"
            android:layout_width="258px"
            android:layout_height="260px"
            android:layout_below="@+id/user1"
            android:layout_marginLeft="-112px"
            android:layout_marginTop="67px"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/a" />
        <ImageButton
            android:id="@+id/about2"
            android:layout_width="258px"
            android:layout_height="260px"
            android:layout_below="@+id/user1"
            android:layout_marginLeft="-112px"
            android:layout_marginTop="67px"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/dabout" 
            android:visibility="invisible"/>
        

        <ImageButton
            android:id="@+id/user1"
            android:layout_width="295px"
            android:layout_height="297px"
            android:layout_marginLeft="-125px"
            android:layout_marginTop="110px"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/u" />
        <ImageButton
            android:id="@+id/user2"
            android:layout_width="295px"
            android:layout_height="297px"
            android:layout_marginLeft="-125px"
            android:layout_marginTop="110px"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/duser" 
            android:visibility="invisible"/>
        
        <ImageButton
            android:id="@+id/play1"
            android:layout_width="280px"
            android:layout_height="283px"
            android:layout_marginRight="-135px"
            android:layout_marginTop="127px"
            android:layout_toLeftOf="@+id/view1"
            android:background="@drawable/d" />
        <ImageButton
            android:id="@+id/play2"
            android:layout_width="280px"
            android:layout_height="283px"
            android:layout_marginRight="-135px"
            android:layout_marginTop="127px"
            android:layout_toLeftOf="@+id/view1"
            android:background="@drawable/dplay" 
            android:visibility="invisible"/>
        
        <ImageButton
            android:id="@+id/view1"
            android:layout_width="372px"
            android:layout_height="375px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/s" />
        <ImageButton
            android:id="@+id/view2"
            android:layout_width="372px"
            android:layout_height="375px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dview" 
            android:visibility="invisible"/>
        
    </RelativeLayout>
	<ImageView
            android:id="@+id/aboutintro"
            android:layout_width="400px"
            android:layout_height="300px"
            android:layout_marginLeft="1250px"
            android:layout_marginTop="600px"
            android:background="@drawable/about_intro" 
            android:visibility="invisible"/>
	<ImageView
            android:id="@+id/viewintro"
            android:layout_width="600px"
            android:layout_height="375px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="400px"
            android:background="@drawable/view_intro" 
            android:visibility="invisible"/>
	<ImageView
            android:id="@+id/playintro"
            android:layout_width="400px"
            android:layout_height="300px"
            android:layout_marginLeft="250px"
            android:layout_marginTop="50px"
            android:background="@drawable/play_intro" 
            android:visibility="invisible"/>
	<ImageView
            android:id="@+id/userintro"
            android:layout_width="400px"
            android:layout_height="292px"
            android:layout_marginLeft="1200px"
            android:layout_marginTop="20px"
            android:background="@drawable/user_intro" 
            android:visibility="invisible"/>

</RelativeLayout>