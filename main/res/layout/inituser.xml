<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@layout/inituser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userban"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="15px"
		android:layout_marginRight="15px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"  >
            
        <EditText
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:layout_marginLeft="10px"
        	android:layout_marginTop="5px"
            android:hint="您的姓名"
            android:inputType="text"
            android:textSize="56px"
            android:ems="9"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/editHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/editName"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10px"
            android:layout_marginTop="5px"
            android:hint="您的身高"
            android:inputType="numberDecimal"
            android:textSize="56px"
            android:ems="6"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/editWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/editHeight"
            android:hint="您的體重"
            android:inputType="numberDecimal"
            android:textSize="56px"
            android:ems="6" 
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/Insert"
         	android:layout_width="180px"
      		android:layout_height="100px"
      		android:layout_alignParentTop="true"
      		android:layout_alignParentRight="true"
      		android:layout_marginRight="20px"
      		android:layout_toRightOf="@+id/editWeight"
			android:textSize="56px"
            android:text="確定"
            android:background="@+drawable/btn_bg_b2" />
    
    </RelativeLayout>
        
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25px"
        android:layout_marginRight="20px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#00000000" >
		<Button
            android:id="@+id/backmenu"
            android:layout_width="300px"
	        android:layout_height="140px"
           	android:layout_alignParentBottom="true"
           	android:layout_marginBottom="20px"
           	android:layout_alignParentRight="true"
           	android:layout_marginRight="20px"
            android:text="回選單"  
            android:textSize="70px"
            android:background="@+drawable/btn_bg_br2_t" />
	</RelativeLayout>
</RelativeLayout>